<!doctype html>
<html lang="en">
<head>
	<meta charset="utf8">
	<title><%= @title + ' | MacPractice List-It! Board' %></title>
	<link href="/reset.css" rel="stylesheet">
	<link href="/style.css" rel="stylesheet">
</head>

<body>
	<header>
		<hgroup>
			<h1><a href="/">MacPractice List-It!</a></h1>
			<h2>MacPractice Listings</h2>
			<a href="/">[All posts]</a>
			<a href="/user/<%= Socket.gethostbyaddr(request.ip.split(".").map {|x| Integer(x)}.pack("CCCC"))[0].to_s[0..-17].capitalize %>">[My Posts]</a>
			
		</hgroup>
	</header>
	<div id="divcontainer">
		<div id="left">HI

		</div>
		<!-- Main Div Where Posts are displayed-->
		<div id="divinline">
			<div id="main">
				<%= yield %>
			</div>
		</div>

		<div id ="right">HI</div>
	</div>

	<footer>
		<p><small>An app for <a href="http://support.macpractice.net">MacPractice, Inc.</a>.</small></p>  
	</footer>  
</body>  

</html>  